<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="neu.finalPro.LeetcodeFarm">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lcfarm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lcfarm_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.LeetcodeFarm"
        tools:targetApi="q">
        <activity
            android:name=".user.AddFriendActivity"
            android:exported="false" />
        <activity
            android:name=".user.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".user.FriendList"
            android:exported="false" />
        <activity
            android:name=".user.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".note.CreateNoteActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".note.NoteActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".checkin.CheckinDate"
            android:exported="false" />
        <activity
            android:name=".user.MainActivity"
            android:exported="false" />
        <activity
            android:name=".user.GrowthActivity"
            android:exported="false" />
    </application>

</manifest>